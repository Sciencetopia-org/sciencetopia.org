<!DOCTYPE html>
<html lang="zh">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - sciencetopia.org</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sciencetopia.org.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="logo-container">
            <img src="~/images/banner.png" alt="Logo" />
        </div>
        <h1 class="title">做一个系统、完备、永久免费的科学平台</h1>
        <!-- 显示当前用户的用户名 -->
        @if (Context?.Session?.GetString("username") != null)
        {
            <div class="user-profile-container">
                <div class="user-avatar">
                    <img src="https://www.discordavatars.com/wp-content/uploads/2020/05/MWU1MDA5ZjE5Y2Q0YjM4MTNkOTNkZDQyMDZjYjc4MmU.jpg"
                        alt="User Avatar" />
                </div>
                <div class="user-details">
                    <p class="user-name">@Context.Session.GetString("username")</p>
                    <p class="user-email">@Context.Session.GetString("UserEmail")</p>
                </div>
            </div>
        }
        else
        {
            <div class="login-register-container">
                <button id="loginButton" class="btn btn-primary">登录</button>
                <button id="registerButton" class="btn btn-secondary">注册</button>
            </div>

            <div id="loginModal" class="modal">
                <!-- Add your login form here -->
                <form method="post" action="@Url.Action("Login", "Account")">
                    <div class="form-group">
                        <label for="username">用户名</label>
                        <input type="text" class="form-control" name="username" id="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">密码</label>
                        <input type="password" class="form-control" name="password" id="password" required>
                    </div>
                    <button type="submit" class="btn btn-primary">登录</button>
                </form>
            </div>

            <div id="registerModal" class="modal">
                <!-- Add your register form here -->
            </div>

            <script>
                document.getElementById("loginButton").addEventListener("click", function () {
                    document.getElementById("loginModal").style.display = "block";
                });

                document.getElementById("registerButton").addEventListener("click", function () {
                    document.getElementById("registerModal").style.display = "block";
                });
            </script>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer>
        <p>&copy; 2023 sciencetopia.org 版权所有。</p>
        <nav>
            <ul>
                <li><a href="/about">关于我们</a></li>
                <li><a href="/contact">联系我们</a></li>
                <li><a href="/privacy">隐私政策</a></li>
                <li><a href="/terms">服务条款</a></li>
            </ul>
        </nav>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
